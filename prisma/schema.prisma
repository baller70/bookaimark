generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SmartTagItem {
  id               String   @id @default(uuid())
  bookmarkId       String
  suggestedTags    String[]
  confidenceScores Float[]
  userId           String
  createdAt        DateTime @default(now())

  @@index([bookmarkId])
  @@index([userId])
}